---
// filepath: src/pages/dashboard.astro
import SingleMode from '../components/SingleMode.astro';
import BatchPanel from '../components/BatchPanel.astro';
import StudentManagement from '../components/StudentManagement.astro';
import EventManagement from '../components/EventManagement.astro';
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard - Certificate Generator</title>

  <!-- ✅ Load QRCode library FIRST -->
  <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>
  


  <script src="https://cdn.jsdelivr.net/npm/html-to-image@1.11.11/dist/html-to-image.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
    body { 
      font-family: 'Inter', sans-serif; 
    }
    
    /* Smooth scroll behavior */
    html {
      scroll-behavior: smooth;
    }
    
    /* Custom animations */
    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .animate-slide-in {
      animation: slideIn 0.4s ease-out;
    }
    
    /* Tab hover effect */
    .nav-tab {
      position: relative;
      overflow: hidden;
    }
    
    .nav-tab::before {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 3px;
      background: linear-gradient(90deg, #3b82f6, #8b5cf6);
      transform: scaleX(0);
      transition: transform 0.3s ease;
    }
    
    .nav-tab.active::before {
      transform: scaleX(1);
    }
    
    /* Glassmorphism effect */
    .glass-card {
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.5);
    }
  </style>
</head>
<body class="bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 min-h-screen">
  <!-- ✅ Auth Check Script -->
  <script>
    const session = localStorage.getItem('auth_session');
    if (!session) {
      window.location.href = '/';
    } else {
      try {
        const sessionData = JSON.parse(session);
        const loginTime = new Date(sessionData.loginTime);
        const now = new Date();
        const hoursSinceLogin = (now.getTime() - loginTime.getTime()) / (1000 * 60 * 60);
        
        if (hoursSinceLogin >= 24) {
          localStorage.removeItem('auth_session');
          localStorage.removeItem('user');
          window.location.href = '/';
        }
      } catch (e) {
        window.location.href = '/';
      }
    }
  </script>

  <div class="min-h-screen">
    <!-- Top Navigation Bar -->
    <nav class="glass-card sticky top-0 z-50 shadow-lg border-b border-gray-200">
      <div class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <!-- Logo & Brand -->
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg">
              <i data-lucide="award" class="w-7 h-7 text-white"></i>
            </div>
            <div>
              <h1 class="text-xl font-bold text-gray-800 flex items-center gap-2">
                Certificate Generator
              </h1>
              <p class="text-xs text-gray-500">University of Makati</p>
            </div>
          </div>

          <!-- User Info & Actions -->
          <div class="flex items-center gap-4">
            <!-- User Profile -->
            <div class="hidden md:flex items-center gap-3 px-4 py-2 bg-white rounded-lg shadow-sm border border-gray-200">
              <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-500 rounded-full flex items-center justify-center">
                <i data-lucide="user" class="w-5 h-5 text-white"></i>
              </div>
              <div>
                <p class="text-xs text-gray-500">Logged in as</p>
                <p class="text-sm font-semibold text-gray-800" id="user-email">Loading...</p>
              </div>
            </div>

            <!-- Logout Button -->
            <button
              id="logout-btn"
              class="px-4 py-2.5 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-all shadow-md hover:shadow-lg flex items-center gap-2 font-medium"
              title="Logout"
            >
              <i data-lucide="log-out" class="w-4 h-4"></i>
              <span class="hidden sm:inline">Logout</span>
            </button>
          </div>
        </div>

        <!-- Navigation Tabs -->
        <div class="flex gap-2 mt-6 border-b border-gray-200 overflow-x-auto">
          <button 
            id="single-mode-tab" 
            class="nav-tab active flex items-center gap-2 px-6 py-3 font-semibold text-sm transition-all whitespace-nowrap text-blue-600 border-b-2 border-blue-600"
          >
            <i data-lucide="file-text" class="w-5 h-5"></i>
            Single Certificate
          </button>
          <button 
            id="batch-mode-tab" 
            class="nav-tab flex items-center gap-2 px-6 py-3 font-semibold text-sm transition-all whitespace-nowrap text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-t-lg"
          >
            <i data-lucide="layers" class="w-5 h-5"></i>
            Batch Mode
          </button>
          <button 
            id="student-management-tab" 
            class="nav-tab flex items-center gap-2 px-6 py-3 font-semibold text-sm transition-all whitespace-nowrap text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-t-lg"
          >
            <i data-lucide="users" class="w-5 h-5"></i>
            Student Management
          </button>
          <button 
            id="event-management-tab" 
            class="nav-tab flex items-center gap-2 px-6 py-3 font-semibold text-sm transition-all whitespace-nowrap text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-t-lg"
          >
            <i data-lucide="calendar" class="w-5 h-5"></i>
            Event Management
          </button>
        </div>
      </div>
    </nav>

    <!-- Main Content Area -->
    <main class="container mx-auto px-6 py-8 max-w-7xl">
      <!-- Welcome Banner -->
      <div class="glass-card rounded-2xl p-6 mb-8 shadow-lg border-l-4 border-blue-600 animate-slide-in">
        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0">
            <i data-lucide="sparkles" class="w-6 h-6 text-blue-600"></i>
          </div>
          <div class="flex-1">
            <h2 class="text-lg font-bold text-gray-800 mb-1 flex items-center gap-2">
              Welcome to Certificate Generator
              <i data-lucide="hand-metal" class="w-5 h-5 text-yellow-500"></i>
            </h2>
            <p class="text-sm text-gray-600 mb-3">
              Create, manage, and send professional certificates with ease. Choose a mode to get started.
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="inline-flex items-center gap-1 px-3 py-1 bg-blue-50 text-blue-700 rounded-full text-xs font-medium">
                <i data-lucide="check-circle" class="w-3 h-3"></i>
                Quick Generation
              </span>
              <span class="inline-flex items-center gap-1 px-3 py-1 bg-green-50 text-green-700 rounded-full text-xs font-medium">
                <i data-lucide="check-circle" class="w-3 h-3"></i>
                Batch Processing
              </span>
              <span class="inline-flex items-center gap-1 px-3 py-1 bg-purple-50 text-purple-700 rounded-full text-xs font-medium">
                <i data-lucide="check-circle" class="w-3 h-3"></i>
                Email Integration
              </span>
              <span class="inline-flex items-center gap-1 px-3 py-1 bg-orange-50 text-orange-700 rounded-full text-xs font-medium">
                <i data-lucide="check-circle" class="w-3 h-3"></i>
                Event QR Codes
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Content Panels -->
      <div class="animate-slide-in">
        <SingleMode />
        <BatchPanel />
        <StudentManagement />
        <EventManagement />
      </div>
    </main>

    <!-- Footer -->
    <footer class="glass-card border-t border-gray-200 mt-12 py-6">
      <div class="container mx-auto px-6">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
          <div class="flex items-center gap-2 text-sm text-gray-600">
            <i data-lucide="shield-check" class="w-4 h-4"></i>
            <span>Secured with encryption</span>
          </div>
          <div class="flex items-center gap-2 text-sm text-gray-600">
            <i data-lucide="copyright" class="w-4 h-4"></i>
            <span>2025 University of Makati - CCIS</span>
          </div>
          <div class="flex items-center gap-3">
            <button class="p-2 hover:bg-gray-100 rounded-lg transition" title="Help">
              <i data-lucide="help-circle" class="w-5 h-5 text-gray-600"></i>
            </button>
            <button class="p-2 hover:bg-gray-100 rounded-lg transition" title="Settings">
              <i data-lucide="settings" class="w-5 h-5 text-gray-600"></i>
            </button>
          </div>
        </div>
      </div>
    </footer>
  </div>

 <!-- ✅ Load main.js with absolute path -->
  <script>
    // Load as a module dynamically
    import('../scripts/main.js')
      .then(() => {
        console.log('✅ main.js loaded!');
      })
      .catch(err => {
        console.error('❌ Failed to load main.js:', err);
      });
  </script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Initialize Lucide icons
      if (typeof lucide !== 'undefined') {
        lucide.createIcons();
      }

      // Load user info
      const userInfo = localStorage.getItem('user');
      if (userInfo) {
        try {
          const user = JSON.parse(userInfo);
          const emailElement = document.getElementById('user-email');
          if (emailElement) {
            emailElement.textContent = user.email;
          }
        } catch (e) {
          console.error('Error loading user info:', e);
        }
      }

      // ✅ UPDATED: Tab switching with Event Management included
      const tabs = {
        'single-mode-tab': 'single-mode-content',
        'batch-mode-tab': 'batch-mode-content',
        'student-management-tab': 'student-management-content',
        'event-management-tab': 'event-management-content' // ✅ Added
      };

      Object.keys(tabs).forEach(tabId => {
        const tabBtn = document.getElementById(tabId);
        tabBtn?.addEventListener('click', () => {
          // Update active tab styling
          document.querySelectorAll('.nav-tab').forEach(tab => {
            tab.classList.remove('active', 'text-blue-600', 'border-b-2', 'border-blue-600');
            tab.classList.add('text-gray-600');
          });
          tabBtn.classList.add('active', 'text-blue-600', 'border-b-2', 'border-blue-600');
          tabBtn.classList.remove('text-gray-600');

          // Show selected content with animation
          Object.values(tabs).forEach(contentId => {
            const content = document.getElementById(contentId);
            if (content) {
              content.classList.add('hidden');
              content.classList.remove('animate-slide-in');
            }
          });

          const activeContent = document.getElementById(tabs[tabId]);
          if (activeContent) {
            activeContent.classList.remove('hidden');
            setTimeout(() => {
              activeContent.classList.add('animate-slide-in');
            }, 10);
          }

          // Reinitialize Lucide icons
          if (typeof lucide !== 'undefined') {
            lucide.createIcons();
          }

          // Scroll to top smoothly
          window.scrollTo({ top: 0, behavior: 'smooth' });
        });
      });

      // Logout handler
      const logoutBtn = document.getElementById('logout-btn');
      logoutBtn?.addEventListener('click', () => {
        if (confirm('Are you sure you want to logout?')) {
          // Add loading state
          logoutBtn.innerHTML = '<i data-lucide="loader" class="w-4 h-4 animate-spin"></i><span class="hidden sm:inline ml-2">Logging out...</span>';
          logoutBtn.disabled = true;
          
          setTimeout(() => {
            localStorage.removeItem('auth_session');
            localStorage.removeItem('user');
            window.location.href = '/';
          }, 500);
        }
      });

      // ✅ UPDATED: Add keyboard shortcuts (including Alt+4 for Event Management)
      document.addEventListener('keydown', (e) => {
        // Alt+1/2/3/4 for tab switching
        if (e.altKey) {
          if (e.key === '1') {
            document.getElementById('single-mode-tab')?.click();
          } else if (e.key === '2') {
            document.getElementById('batch-mode-tab')?.click();
          } else if (e.key === '3') {
            document.getElementById('student-management-tab')?.click();
          } else if (e.key === '4') {
            document.getElementById('event-management-tab')?.click(); // ✅ Added
          }
        }
      });
    });
  </script>
</body>
</html>