---
// filepath: src/pages/dashboard.astro
import SingleMode from '../components/SingleMode.astro';
import BatchPanel from '../components/BatchPanel.astro';
import StudentManagement from '../components/StudentManagement.astro';
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard - Certificate Generator</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/html-to-image@1.11.11/dist/html-to-image.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&family=Source+Sans+3:wght@300;400;600;700&display=swap');
    body { font-family: 'Source Sans 3', sans-serif; }
  </style>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
  <!-- âœ… Auth Check Script (Runs before page renders) -->
  <script>
    // Check authentication before page loads
    const session = localStorage.getItem('auth_session');
    if (!session) {
      window.location.href = '/';
    } else {
      try {
        const sessionData = JSON.parse(session);
        const loginTime = new Date(sessionData.loginTime);
        const now = new Date();
        const hoursSinceLogin = (now.getTime() - loginTime.getTime()) / (1000 * 60 * 60);
        
        if (hoursSinceLogin >= 24) {
          localStorage.removeItem('auth_session');
          localStorage.removeItem('user');
          window.location.href = '/';
        }
      } catch (e) {
        window.location.href = '/';
      }
    }
  </script>

  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Header with Logout -->
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-4xl font-bold text-gray-800 mb-2">ðŸŽ“ Certificate Generator</h1>
        <p class="text-gray-600">Create professional certificates easily</p>
      </div>
      <div class="flex items-center gap-4">
        <div class="text-right">
          <p class="text-sm text-gray-600">Logged in as</p>
          <p class="font-semibold text-gray-800" id="user-email">Loading...</p>
        </div>
        <button
          id="logout-btn"
          class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition flex items-center gap-2"
        >
          <i data-lucide="log-out" class="w-4 h-4"></i>
          Logout
        </button>
      </div>
    </div>

    <!-- Mode Selection -->
    <div class="flex justify-center gap-4 mb-8">
      <button id="single-mode-tab" class="px-8 py-4 rounded-xl font-semibold text-lg transition-all bg-blue-600 text-white shadow-lg">
        ðŸ“„ Single Certificate
      </button>
      <button id="batch-mode-tab" class="px-8 py-4 rounded-xl font-semibold text-lg transition-all bg-white text-gray-700 shadow">
        ðŸ“¦ Batch Mode
      </button>
      <button id="student-management-tab" class="px-8 py-4 rounded-xl font-semibold text-lg transition-all bg-white text-gray-700 shadow">
        ðŸŽ“ Student Management
      </button>
    </div>

    <SingleMode />
    <BatchPanel />
    <StudentManagement />
  </div>

  <script type="module" src="/src/scripts/main.js"></script>
  <script>
    // Initialize Lucide icons
    document.addEventListener('DOMContentLoaded', () => {
      if (typeof lucide !== 'undefined') {
        lucide.createIcons();
      }

      // Load user info
      const userInfo = localStorage.getItem('user');
      if (userInfo) {
        const user = JSON.parse(userInfo);
        const emailElement = document.getElementById('user-email');
        if (emailElement) {
          emailElement.textContent = user.email;
        }
      }

      // Logout handler
      const logoutBtn = document.getElementById('logout-btn');
      logoutBtn?.addEventListener('click', () => {
        if (confirm('Are you sure you want to logout?')) {
          localStorage.removeItem('auth_session');
          localStorage.removeItem('user');
          window.location.href = '/';
        }
      });
    });
  </script>
</body>
</html>