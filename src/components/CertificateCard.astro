---
// filepath: src/components/CertificateCard.astro
---

<div id="certificate-container" class="overflow-x-auto">
  <!-- A4 Landscape: 297mm x 210mm = 1122px x 794px at 96 DPI -->
  <div id="certificate-card" class="relative w-[1122px] h-[794px] bg-white mx-auto" style="border: 20px solid #1e40af; box-shadow: inset 0 0 0 8px #fbbf24;">
    <!-- Decorative corner elements -->
    <div class="absolute top-0 left-0 w-24 h-24 border-t-8 border-l-8 border-blue-700"></div>
    <div class="absolute top-0 right-0 w-24 h-24 border-t-8 border-r-8 border-blue-700"></div>
    <div class="absolute bottom-0 left-0 w-24 h-24 border-b-8 border-l-8 border-blue-700"></div>
    <div class="absolute bottom-0 right-0 w-24 h-24 border-b-8 border-r-8 border-blue-700"></div>

    <!-- Decorative corner icons -->
    <div class="absolute top-6 left-6">
      <i data-lucide="award" class="w-6 h-6 text-yellow-500"></i>
    </div>
    <div class="absolute top-6 right-6">
      <i data-lucide="award" class="w-6 h-6 text-yellow-500"></i>
    </div>
    <div class="absolute bottom-6 left-6">
      <i data-lucide="star" class="w-6 h-6 text-yellow-500"></i>
    </div>
    <div class="absolute bottom-6 right-6">
      <i data-lucide="star" class="w-6 h-6 text-yellow-500"></i>
    </div>

    <!-- Blue and gold decorative bars -->
    <div class="absolute top-0 left-0 w-full h-3 bg-gradient-to-r from-blue-700 via-yellow-500 to-blue-700"></div>
    <div class="absolute bottom-0 left-0 w-full h-3 bg-gradient-to-r from-blue-700 via-yellow-500 to-blue-700"></div>

    <div class="relative z-10 flex flex-col items-center px-12 py-8 h-full">
      <!-- Header with logos -->
      <div class="flex items-center justify-between w-full mb-4">
        <!-- Left Logo -->
        <div id="left-logo-preview" class="w-24 h-24 flex items-center justify-center">
          <div class="w-20 h-20 bg-blue-900 rounded-full flex items-center justify-center border-4 border-yellow-500">
            <i data-lucide="graduation-cap" class="w-10 h-10 text-yellow-400"></i>
          </div>
        </div>

        <!-- Header Text -->
        <div class="text-center flex-1 mx-6">
          <div class="flex items-center justify-center gap-2 mb-1">
            <i data-lucide="building-2" class="w-4 h-4 text-blue-900"></i>
            <h1 class="text-xl font-bold text-blue-900" style="font-family: 'Times New Roman', serif;">UNIVERSITY OF MAKATI</h1>
            <i data-lucide="building-2" class="w-4 h-4 text-blue-900"></i>
          </div>
          <div class="flex items-center justify-center gap-1 mb-1">
            <i data-lucide="map-pin" class="w-3 h-3 text-gray-700"></i>
            <p class="text-xs text-gray-700" style="font-family: 'Arial', sans-serif;">J.P. Rizal Extension., West Rembo, Taguig City</p>
          </div>
          <div class="flex items-center justify-center gap-2">
            <i data-lucide="laptop" class="w-3 h-3 text-blue-900"></i>
            <h2 class="text-base font-semibold text-blue-900" style="font-family: 'Times New Roman', serif;">College of Computing and Information Sciences</h2>
            <i data-lucide="laptop" class="w-3 h-3 text-blue-900"></i>
          </div>
        </div>

        <!-- Right Logo -->
        <div id="right-logo-preview" class="w-24 h-24 flex items-center justify-center">
          <div class="w-20 h-20 bg-green-700 rounded-full flex items-center justify-center border-4 border-yellow-500">
            <i data-lucide="code-2" class="w-10 h-10 text-green-200"></i>
          </div>
        </div>
      </div>

      <!-- Decorative line with icons -->
      <div class="w-full flex items-center justify-center gap-3 mb-5">
        <i data-lucide="sparkles" class="w-4 h-4 text-blue-700"></i>
        <div class="flex-1 h-1 bg-gradient-to-r from-transparent via-blue-700 to-transparent"></div>
        <i data-lucide="award" class="w-5 h-5 text-yellow-500"></i>
        <div class="flex-1 h-1 bg-gradient-to-r from-transparent via-blue-700 to-transparent"></div>
        <i data-lucide="sparkles" class="w-4 h-4 text-blue-700"></i>
      </div>

      <!-- Certificate Title -->
      <div class="mb-5">
        <div class="flex items-center justify-center gap-2 mb-1">
          <i data-lucide="medal" class="w-8 h-8 text-yellow-500"></i>
          <h2 class="text-5xl font-bold text-center text-blue-900 tracking-wide" style="font-family: 'Times New Roman', serif; letter-spacing: 0.1em;">
            CERTIFICATE
          </h2>
          <i data-lucide="medal" class="w-8 h-8 text-yellow-500"></i>
        </div>
        <div class="flex items-center justify-center gap-2 mt-1">
          <i data-lucide="trophy" class="w-4 h-4 text-gray-600"></i>
          <p class="text-center text-gray-600 text-lg" style="font-family: 'Arial', sans-serif;">OF PARTICIPATION</p>
          <i data-lucide="trophy" class="w-4 h-4 text-gray-600"></i>
        </div>
        <div class="flex items-center justify-center gap-2 mt-3">
          <i data-lucide="gift" class="w-3 h-3 text-gray-600"></i>
          <p class="text-center text-gray-600 text-sm italic" style="font-family: 'Georgia', serif;">This certificate is proudly presented to</p>
        </div>
      </div>

      <!-- Participant Name with icon -->
      <div class="mb-4">
        <div class="flex items-center justify-center gap-2">
          <i data-lucide="user-circle" class="w-6 h-6 text-blue-900"></i>
          <h3 id="preview-name" class="text-4xl font-bold text-blue-900 text-center border-b-4 border-blue-900 pb-1 px-10" style="font-family: 'Brush Script MT', cursive;">
            Jessan Q. Mojica
          </h3>
          <i data-lucide="user-circle" class="w-6 h-6 text-blue-900"></i>
        </div>
      </div>

      <!-- Description -->
      <div class="text-center mb-6 max-w-3xl">
        <div class="flex items-center justify-center gap-2 mb-2">
          <i data-lucide="book-open" class="w-4 h-4 text-gray-700"></i>
          <p class="text-gray-700 text-base leading-relaxed" style="font-family: 'Georgia', serif;">
            for actively participating in the seminar entitled
          </p>
        </div>
        <div class="flex items-center justify-center gap-2 mb-2">
          <i data-lucide="presentation" class="w-4 h-4 text-blue-900"></i>
          <p id="preview-seminar" class="text-lg font-semibold text-blue-900 px-3" style="font-family: 'Times New Roman', serif;">
            "Demystifying the SOC: Fundamentals of Security Operations Centers for Future Cyber Defenders"
          </p>
          <i data-lucide="presentation" class="w-4 h-4 text-blue-900"></i>
        </div>
        <div class="flex items-center justify-center gap-2 flex-wrap">
          <p class="text-gray-700 text-base" style="font-family: 'Georgia', serif;">held on</p>
          <div class="flex items-center gap-1">
            <i data-lucide="calendar-days" class="w-3 h-3 text-blue-900"></i>
            <span id="preview-date" class="font-semibold text-blue-900 text-base">September 24, 2025</span>
          </div>
          <p class="text-gray-700 text-base" style="font-family: 'Georgia', serif;">, at</p>
          <div class="flex items-center gap-1">
            <i data-lucide="map-pin" class="w-3 h-3 text-blue-900"></i>
            <span id="preview-location" class="font-semibold text-blue-900 text-base">HPSB 1012, University of Makati, Taguig City</span>
          </div>
        </div>
      </div>

      <!-- Signatures -->
      <div class="flex justify-around items-end w-full max-w-3xl mt-auto pt-4">
        <!-- Dean Signature -->
        <div class="text-center">
          <div id="dean-signature-preview" class="w-44 h-16 mb-1 flex items-center justify-center">
            <i data-lucide="file-signature" class="w-10 h-10 text-gray-300"></i>
          </div>
          <div class="w-44 border-t-2 border-blue-900 mb-1"></div>
          <div class="flex items-center justify-center gap-1 mb-1">
            <i data-lucide="award" class="w-3 h-3 text-blue-900"></i>
            <p id="preview-dean" class="font-bold text-blue-900 text-sm" style="font-family: 'Times New Roman', serif;">Prof. Levi B. Mangaba, DT</p>
          </div>
          <div class="flex items-center justify-center gap-1">
            <i data-lucide="briefcase" class="w-3 h-3 text-gray-600"></i>
            <p class="text-xs text-gray-600" style="font-family: 'Arial', sans-serif;">Dean, CCIS</p>
          </div>
        </div>

        <!-- Organizer Signature -->
        <div class="text-center">
          <div id="organizer-signature-preview" class="w-44 h-16 mb-1 flex items-center justify-center">
            <i data-lucide="file-signature" class="w-10 h-10 text-gray-300"></i>
          </div>
          <div class="w-44 border-t-2 border-blue-900 mb-1"></div>
          <div class="flex items-center justify-center gap-1 mb-1">
            <i data-lucide="user-check" class="w-3 h-3 text-blue-900"></i>
            <p id="preview-organizer" class="font-bold text-blue-900 text-sm" style="font-family: 'Times New Roman', serif;">Prof. Cecille E. Tadeo, Ph. D.</p>
          </div>
          <div class="flex items-center justify-center gap-1">
            <i data-lucide="clipboard-check" class="w-3 h-3 text-gray-600"></i>
            <p class="text-xs text-gray-600" style="font-family: 'Arial', sans-serif;">Event Organizer</p>
          </div>
        </div>
      </div>

      <!-- Decorative bottom element -->
      <div class="mt-3">
        <div class="flex items-center justify-center gap-3">
          <i data-lucide="star" class="w-3 h-3 text-yellow-500"></i>
          <div class="w-56 h-1 bg-gradient-to-r from-transparent via-yellow-500 to-transparent"></div>
          <i data-lucide="star" class="w-3 h-3 text-yellow-500"></i>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Initialize Lucide icons after component loads
  if (typeof lucide !== 'undefined') {
    lucide.createIcons();
  }
</script>