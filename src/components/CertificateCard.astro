---
// filepath: src/components/CertificateCard.astro
---

<div id="certificate-container" class="flex items-center justify-center bg-gray-100 py-8">
  <!-- A4 Landscape: 297mm x 210mm = 1122px x 794px at 96 DPI -->
  <div id="certificate-card" class="relative w-[1122px] h-[794px] bg-white shadow-2xl" style="border: 20px solid #1e40af; box-shadow: inset 0 0 0 8px #fbbf24;">
    
    <!-- Decorative corner elements -->
    <div class="absolute top-8 left-8 w-16 h-16 border-t-4 border-l-4 border-blue-700"></div>
    <div class="absolute top-8 right-8 w-16 h-16 border-t-4 border-r-4 border-blue-700"></div>
    <div class="absolute bottom-8 left-8 w-16 h-16 border-b-4 border-l-4 border-blue-700"></div>
    <div class="absolute bottom-8 right-8 w-16 h-16 border-b-4 border-r-4 border-blue-700"></div>

    <!-- Corner icons -->
    <div class="absolute top-10 left-10">
      <i data-lucide="award" class="w-5 h-5 text-yellow-500"></i>
    </div>
    <div class="absolute top-10 right-10">
      <i data-lucide="award" class="w-5 h-5 text-yellow-500"></i>
    </div>
    <div class="absolute bottom-10 left-10">
      <i data-lucide="star" class="w-5 h-5 text-yellow-500"></i>
    </div>
    <div class="absolute bottom-10 right-10">
      <i data-lucide="star" class="w-5 h-5 text-yellow-500"></i>
    </div>

    <!-- Top and bottom decorative bars -->
    <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-blue-700 via-yellow-500 to-blue-700"></div>
    <div class="absolute bottom-0 left-0 w-full h-2 bg-gradient-to-r from-blue-700 via-yellow-500 to-blue-700"></div>

    <!-- âœ… FIXED: Main Content - Properly Centered with absolute positioning -->
    <div class="absolute inset-0 flex flex-col items-center justify-center px-20 py-12">
      
      <!-- Header with logos -->
      <div class="flex items-center justify-between w-full mb-4">
        <!-- Left Logo -->
        <div id="left-logo-preview" class="w-20 h-20 flex items-center justify-center flex-shrink-0">
          <div class="w-20 h-20 bg-blue-900 rounded-full flex items-center justify-center border-4 border-yellow-500">
            <i data-lucide="graduation-cap" class="w-10 h-10 text-yellow-400"></i>
          </div>
        </div>

        <!-- Header Text - Centered -->
        <div class="text-center flex-1 mx-6">
          <div class="flex items-center justify-center gap-2 mb-0.5">
            <i data-lucide="building-2" class="w-4 h-4 text-blue-900"></i>
            <h1 class="text-xl font-bold text-blue-900" style="font-family: 'Times New Roman', serif;">UNIVERSITY OF MAKATI</h1>
            <i data-lucide="building-2" class="w-4 h-4 text-blue-900"></i>
          </div>
          <div class="flex items-center justify-center gap-1 mb-0.5">
            <i data-lucide="map-pin" class="w-3 h-3 text-gray-700"></i>
            <p class="text-xs text-gray-700" style="font-family: 'Arial', sans-serif;">J.P. Rizal Extension., West Rembo, Taguig City</p>
          </div>
          <div class="flex items-center justify-center gap-2">
            <i data-lucide="laptop" class="w-3 h-3 text-blue-900"></i>
            <h2 class="text-sm font-semibold text-blue-900" style="font-family: 'Times New Roman', serif;">College of Computing and Information Sciences</h2>
            <i data-lucide="laptop" class="w-3 h-3 text-blue-900"></i>
          </div>
        </div>

        <!-- Right Logo -->
        <div id="right-logo-preview" class="w-20 h-20 flex items-center justify-center flex-shrink-0">
          <div class="w-20 h-20 bg-green-700 rounded-full flex items-center justify-center border-4 border-yellow-500">
            <i data-lucide="code-2" class="w-10 h-10 text-green-200"></i>
          </div>
        </div>
      </div>

      <!-- Decorative line -->
      <div class="w-full flex items-center justify-center gap-3 mb-4">
        <i data-lucide="sparkles" class="w-4 h-4 text-blue-700"></i>
        <div class="flex-1 h-1 bg-gradient-to-r from-transparent via-blue-700 to-transparent max-w-sm"></div>
        <i data-lucide="award" class="w-5 h-5 text-yellow-500"></i>
        <div class="flex-1 h-1 bg-gradient-to-r from-transparent via-blue-700 to-transparent max-w-sm"></div>
        <i data-lucide="sparkles" class="w-4 h-4 text-blue-700"></i>
      </div>

      <!-- Certificate Title -->
      <div class="text-center mb-4">
        <div class="flex items-center justify-center gap-3 mb-1">
          <i data-lucide="medal" class="w-8 h-8 text-yellow-500"></i>
          <h2 class="text-5xl font-bold text-blue-900 tracking-widest" style="font-family: 'Times New Roman', serif; letter-spacing: 0.15em;">
            CERTIFICATE
          </h2>
          <i data-lucide="medal" class="w-8 h-8 text-yellow-500"></i>
        </div>
        <div class="flex items-center justify-center gap-2 mb-2">
          <i data-lucide="trophy" class="w-4 h-4 text-gray-600"></i>
          <p class="text-gray-600 text-lg" style="font-family: 'Arial', sans-serif;">OF PARTICIPATION</p>
          <i data-lucide="trophy" class="w-4 h-4 text-gray-600"></i>
        </div>
        <div class="flex items-center justify-center gap-2">
          <i data-lucide="gift" class="w-3 h-3 text-gray-600"></i>
          <p class="text-gray-600 text-sm italic" style="font-family: 'Georgia', serif;">This certificate is proudly presented to</p>
        </div>
      </div>

      <!-- Participant Name -->
      <div class="mb-4 flex justify-center w-full">
        <div class="flex items-center gap-3">
          <i data-lucide="user-circle" class="w-6 h-6 text-blue-900"></i>
          <h3 id="preview-name" class="text-4xl font-bold text-blue-900 border-b-4 border-blue-900 pb-1 px-12" style="font-family: 'Brush Script MT', cursive;">
            Ken Garcia
          </h3>
          <i data-lucide="user-circle" class="w-6 h-6 text-blue-900"></i>
        </div>
      </div>

      <!-- Description -->
      <div class="text-center mb-6 px-12">
        <div class="flex items-center justify-center gap-2 mb-1.5">
          <i data-lucide="book-open" class="w-4 h-4 text-gray-700"></i>
          <p class="text-gray-700 text-base" style="font-family: 'Georgia', serif;">
            for actively participating in the seminar entitled
          </p>
        </div>
        <div class="flex items-center justify-center gap-2 mb-2">
          <i data-lucide="presentation" class="w-4 h-4 text-blue-900"></i>
          <p id="preview-seminar" class="text-xl font-semibold text-blue-900 px-2" style="font-family: 'Times New Roman', serif;">
            "Mobile App Security"
          </p>
          <i data-lucide="presentation" class="w-4 h-4 text-blue-900"></i>
        </div>
        <div class="flex items-center justify-center gap-2 flex-wrap">
          <p class="text-gray-700 text-base" style="font-family: 'Georgia', serif;">held on</p>
          <div class="flex items-center gap-1">
            <i data-lucide="calendar-days" class="w-3 h-3 text-blue-900"></i>
            <span id="preview-date" class="font-semibold text-blue-900 text-base">Date(2025,9,15)</span>
          </div>
          <p class="text-gray-700 text-base" style="font-family: 'Georgia', serif;">, at</p>
          <div class="flex items-center gap-1">
            <i data-lucide="map-pin" class="w-3 h-3 text-blue-900"></i>
            <span id="preview-location" class="font-semibold text-blue-900 text-base">HPSB 1012</span>
          </div>
        </div>
      </div>

      <!-- Signatures -->
      <div class="flex justify-center items-end gap-32 w-full mt-6">
        <!-- Dean Signature -->
        <div class="text-center">
          <div id="dean-signature-preview" class="w-44 h-14 mb-1.5 flex items-center justify-center">
            <i data-lucide="file-signature" class="w-10 h-10 text-gray-300"></i>
          </div>
          <div class="w-44 border-t-2 border-blue-900 mb-1.5"></div>
          <div class="flex items-center justify-center gap-1 mb-0.5">
            <i data-lucide="award" class="w-3 h-3 text-blue-900"></i>
            <p id="preview-dean" class="font-bold text-blue-900 text-sm" style="font-family: 'Times New Roman', serif;">Dr. Joel B. Mangaba, DIT</p>
          </div>
          <div class="flex items-center justify-center gap-1">
            <i data-lucide="briefcase" class="w-3 h-3 text-gray-600"></i>
            <p class="text-xs text-gray-600" style="font-family: 'Arial', sans-serif;">Dean, CCIS</p>
          </div>
        </div>

        <!-- Organizer Signature -->
        <div class="text-center">
          <div id="organizer-signature-preview" class="w-44 h-14 mb-1.5 flex items-center justify-center">
            <i data-lucide="file-signature" class="w-10 h-10 text-gray-300"></i>
          </div>
          <div class="w-44 border-t-2 border-blue-900 mb-1.5"></div>
          <div class="flex items-center justify-center gap-1 mb-0.5">
            <i data-lucide="user-check" class="w-3 h-3 text-blue-900"></i>
            <p id="preview-organizer" class="font-bold text-blue-900 text-sm" style="font-family: 'Times New Roman', serif;">Dr. Cecille E. Tadeo, Ph. D.</p>
          </div>
          <div class="flex items-center justify-center gap-1">
            <i data-lucide="clipboard-check" class="w-3 h-3 text-gray-600"></i>
            <p class="text-xs text-gray-600" style="font-family: 'Arial', sans-serif;">Event Organizer</p>
          </div>
        </div>
      </div>

      <!-- Bottom decorative element -->
      <div class="mt-4">
        <div class="flex items-center justify-center gap-3">
          <i data-lucide="star" class="w-3 h-3 text-yellow-500"></i>
          <div class="w-48 h-1 bg-gradient-to-r from-transparent via-yellow-500 to-transparent"></div>
          <i data-lucide="star" class="w-3 h-3 text-yellow-500"></i>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Initialize Lucide icons after component loads
  if (typeof lucide !== 'undefined') {
    lucide.createIcons();
  }
</script>