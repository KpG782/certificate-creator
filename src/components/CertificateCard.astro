<div id="certificate-container" class="overflow-x-auto">
  <div id="certificate-card" class="relative w-[1200px] h-[850px] bg-white mx-auto" style="border: 20px solid #1e40af; box-shadow: inset 0 0 0 8px #fbbf24;">
    <!-- Decorative corner elements -->
    <div class="absolute top-0 left-0 w-32 h-32 border-t-8 border-l-8 border-blue-700"></div>
    <div class="absolute top-0 right-0 w-32 h-32 border-t-8 border-r-8 border-blue-700"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 border-b-8 border-l-8 border-blue-700"></div>
    <div class="absolute bottom-0 right-0 w-32 h-32 border-b-8 border-r-8 border-blue-700"></div>

    <!-- Blue and gold decorative bars -->
    <div class="absolute top-0 left-0 w-full h-3 bg-gradient-to-r from-blue-700 via-yellow-500 to-blue-700"></div>
    <div class="absolute bottom-0 left-0 w-full h-3 bg-gradient-to-r from-blue-700 via-yellow-500 to-blue-700"></div>

    <div class="relative z-10 flex flex-col items-center px-16 py-10 h-full">
      <!-- Header with logos -->
      <div class="flex items-center justify-between w-full mb-6">
        <!-- Left Logo -->
        <div id="left-logo-preview" class="w-28 h-28 flex items-center justify-center">
          <div class="w-24 h-24 bg-blue-900 rounded-full flex items-center justify-center border-4 border-yellow-500">
            <span class="text-yellow-400 text-2xl font-bold">UM</span>
          </div>
        </div>

        <!-- Header Text -->
        <div class="text-center flex-1 mx-8">
          <h1 class="text-2xl font-bold text-blue-900 mb-1" style="font-family: 'Times New Roman', serif;">UNIVERSITY OF MAKATI</h1>
          <p class="text-xs text-gray-700 mb-2" style="font-family: 'Arial', sans-serif;">J.P. Rizal Extension., West Rembo, Taguig City</p>
          <h2 class="text-lg font-semibold text-blue-900" style="font-family: 'Times New Roman', serif;">College of Computing and Information Sciences</h2>
        </div>

        <!-- Right Logo -->
        <div id="right-logo-preview" class="w-28 h-28 flex items-center justify-center">
          <div class="w-24 h-24 bg-green-700 rounded-full flex items-center justify-center border-4 border-yellow-500">
            <span class="text-green-200 text-2xl font-bold">CC</span>
          </div>
        </div>
      </div>

      <!-- Decorative line -->
      <div class="w-full h-1 bg-gradient-to-r from-transparent via-blue-700 to-transparent mb-8"></div>

      <!-- Certificate Title -->
      <div class="mb-8">
        <h2 class="text-6xl font-bold text-center text-blue-900 tracking-wide" style="font-family: 'Times New Roman', serif; letter-spacing: 0.1em;">
          CERTIFICATE
        </h2>
        <p class="text-center text-gray-600 mt-2 text-xl" style="font-family: 'Arial', sans-serif;">OF PARTICIPATION</p>
        <p class="text-center text-gray-600 mt-4 text-base italic" style="font-family: 'Georgia', serif;">This certificate is proudly presented to</p>
      </div>

      <!-- Participant Name -->
      <div class="mb-6">
        <h3 id="preview-name" class="text-5xl font-bold text-blue-900 text-center border-b-4 border-blue-900 pb-2 px-12" style="font-family: 'Brush Script MT', cursive;">
          Jessan Q. Mojica
        </h3>
      </div>

      <!-- Description -->
      <div class="text-center mb-8 max-w-4xl">
        <p class="text-gray-700 text-lg leading-relaxed" style="font-family: 'Georgia', serif;">
          for actively participating in the seminar entitled
        </p>
        <p id="preview-seminar" class="text-xl font-semibold text-blue-900 mt-3 mb-3 px-4" style="font-family: 'Times New Roman', serif;">
          "Demystifying the SOC: Fundamentals of Security Operations Centers for Future Cyber Defenders"
        </p>
        <p class="text-gray-700 text-lg" style="font-family: 'Georgia', serif;">
          held on <span id="preview-date" class="font-semibold text-blue-900">September 24, 2025</span>, at <span id="preview-location" class="font-semibold text-blue-900">HPSB 1012, University of Makati, Taguig City</span>
        </p>
      </div>

      <!-- Signatures -->
      <div class="flex justify-around items-end w-full max-w-4xl mt-auto pt-6">
        <div class="text-center">
          <div id="dean-signature-preview" class="w-52 h-20 mb-1 flex items-center justify-center"></div>
          <div class="w-52 border-t-2 border-blue-900 mb-1"></div>
          <p id="preview-dean" class="font-bold text-blue-900 text-base" style="font-family: 'Times New Roman', serif;">Prof. Levi B. Mangaba, DT</p>
          <p class="text-sm text-gray-600" style="font-family: 'Arial', sans-serif;">Dean, CCIS</p>
        </div>

        <div class="text-center">
          <div id="organizer-signature-preview" class="w-52 h-20 mb-1 flex items-center justify-center"></div>
          <div class="w-52 border-t-2 border-blue-900 mb-1"></div>
          <p id="preview-organizer" class="font-bold text-blue-900 text-base" style="font-family: 'Times New Roman', serif;">Prof. Cecille E. Tadeo, Ph. D.</p>
          <p class="text-sm text-gray-600" style="font-family: 'Arial', sans-serif;">Event Organizer</p>
        </div>
      </div>

      <!-- Decorative bottom element -->
      <div class="mt-4">
        <div class="w-64 h-1 bg-gradient-to-r from-transparent via-yellow-500 to-transparent mx-auto"></div>
      </div>
    </div>
  </div>
</div>