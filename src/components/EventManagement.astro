---
// filepath: src/components/EventManagement.astro
---

<div id="event-management-content" class="hidden">
  <div class="event-management-container">
    <!-- Event Creation Form -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-12 h-12 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-xl flex items-center justify-center">
          <i data-lucide="calendar-plus" class="w-6 h-6 text-white"></i>
        </div>
        <div>
          <h2 class="text-2xl font-bold text-gray-800">Create New Event</h2>
          <p class="text-sm text-gray-600">Generate QR codes for student attendance tracking</p>
        </div>
      </div>
      
      <form id="eventForm" class="space-y-4">
        <!-- Event Name -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            <i data-lucide="tag" class="w-4 h-4 inline mr-1"></i>
            Event Name *
          </label>
          <input 
            type="text" 
            id="eventName" 
            required
            value="Cybersecurity Awareness Seminar"
            placeholder="e.g., Mobile App Security Workshop"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          />
        </div>

        <!-- Event Date & Time -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <i data-lucide="calendar" class="w-4 h-4 inline mr-1"></i>
              Event Date *
            </label>
            <input 
              type="date" 
              id="eventDate" 
              required
              value="2025-11-15"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <i data-lucide="clock" class="w-4 h-4 inline mr-1"></i>
              Event Time *
            </label>
            <input 
              type="time" 
              id="eventTime" 
              required
              value="14:00"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>
        </div>

        <!-- Location -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            <i data-lucide="map-pin" class="w-4 h-4 inline mr-1"></i>
            Location *
          </label>
          <input 
            type="text" 
            id="location" 
            required
            value="HPSB 1012"
            placeholder="e.g., AVR Room, CCIS Building"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          />
        </div>

        <!-- Invited Sections -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            <i data-lucide="users" class="w-4 h-4 inline mr-1"></i>
            Invited Sections
          </label>
          <input 
            type="text" 
            id="invitedSections" 
            value="BSIT 4-1, BSCS 4-A, BSIT 3-2"
            placeholder="e.g., BSIT 4-1, BSCS 3-A (comma-separated)"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          />
          <p class="text-xs text-gray-500 mt-1 flex items-center gap-1">
            <i data-lucide="info" class="w-3 h-3"></i>
            Leave empty to allow all students
          </p>
        </div>

        <!-- Registration Window -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <i data-lucide="clock-3" class="w-4 h-4 inline mr-1"></i>
              Registration Opens *
            </label>
            <input 
              type="datetime-local" 
              id="registrationStart" 
              required
              value="2025-11-01T08:00"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <i data-lucide="clock-9" class="w-4 h-4 inline mr-1"></i>
              Registration Closes *
            </label>
            <input 
              type="datetime-local" 
              id="registrationEnd" 
              required
              value="2025-11-15T13:00"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>
        </div>

        <!-- Certificate Details -->
        <div class="border-t pt-4 mt-4">
          <h3 class="text-lg font-semibold text-gray-800 mb-3 flex items-center gap-2">
            <i data-lucide="award" class="w-5 h-5"></i>
            Certificate Details
          </h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                <i data-lucide="user-check" class="w-4 h-4 inline mr-1"></i>
                Dean Name *
              </label>
              <input 
                type="text" 
                id="deanName" 
                required
                value="Dr. Joel B. Mangaba, DIT"
                placeholder="Dr. Joel B. Mangaba, DIT"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                <i data-lucide="clipboard-check" class="w-4 h-4 inline mr-1"></i>
                Organizer Name *
              </label>
              <input 
                type="text" 
                id="organizerName" 
                required
                value="Dr. Cecille E. Tadeo, Ph. D."
                placeholder="Dr. Cecille E. Tadeo, Ph. D."
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <button 
          type="submit" 
          id="createEventBtn"
          class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200 flex items-center justify-center shadow-lg"
        >
          <i data-lucide="qr-code" class="w-5 h-5 mr-2"></i>
          Create Event & Generate QR Code
        </button>
      </form>
    </div>

    <!-- QR Code Display -->
    <div id="qrCodeDisplay" class="bg-white rounded-lg shadow-md p-6 hidden">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-12 h-12 bg-gradient-to-br from-green-600 to-emerald-600 rounded-xl flex items-center justify-center">
          <i data-lucide="check-circle" class="w-6 h-6 text-white"></i>
        </div>
        <div>
          <h2 class="text-2xl font-bold text-gray-800">Event QR Code Generated!</h2>
          <p class="text-sm text-gray-600">Share this QR code with students</p>
        </div>
      </div>
      
      <div class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-lg p-6">
        <div class="mb-6 bg-white rounded-lg p-4 shadow-sm">
          <h3 id="displayEventName" class="text-xl font-semibold text-gray-800 mb-3 flex items-center gap-2">
            <i data-lucide="calendar-check" class="w-5 h-5 text-blue-600"></i>
            <span></span>
          </h3>
          <div class="text-sm text-gray-600 space-y-2">
            <p class="flex items-center gap-2">
              <i data-lucide="calendar" class="w-4 h-4 text-gray-500"></i>
              <strong>Date:</strong> <span id="displayEventDate"></span>
            </p>
            <p class="flex items-center gap-2">
              <i data-lucide="map-pin" class="w-4 h-4 text-gray-500"></i>
              <strong>Location:</strong> <span id="displayLocation"></span>
            </p>
            <p class="flex items-center gap-2">
              <i data-lucide="clock" class="w-4 h-4 text-gray-500"></i>
              <strong>Registration:</strong> <span id="displayRegistrationWindow"></span>
            </p>
          </div>
        </div>

        <div class="flex flex-col items-center">
          <div class="bg-white p-6 rounded-xl shadow-xl mb-4 border-4 border-gray-200">
            <canvas id="qrCodeCanvas"></canvas>
          </div>
          
          <p class="text-sm text-gray-600 text-center mb-4 flex items-center gap-2">
            <i data-lucide="scan" class="w-4 h-4"></i>
            Students scan this QR code to mark attendance
          </p>

          <div class="flex gap-3 flex-wrap justify-center">
            <button id="downloadQRBtn" class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded-lg transition duration-200 flex items-center gap-2 shadow-md">
              <i data-lucide="download" class="w-4 h-4"></i>
              Download QR Code
            </button>
            
            <button id="copyLinkBtn" class="bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-6 rounded-lg transition duration-200 flex items-center gap-2 shadow-md">
              <i data-lucide="link" class="w-4 h-4"></i>
              Copy Link
            </button>

            <button id="printQRBtn" class="bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-6 rounded-lg transition duration-200 flex items-center gap-2 shadow-md">
              <i data-lucide="printer" class="w-4 h-4"></i>
              Print QR
            </button>
          </div>
        </div>

        <div class="mt-6 p-4 bg-white rounded-lg border border-gray-200">
          <div class="flex items-center gap-2 mb-2">
            <i data-lucide="key" class="w-4 h-4 text-gray-500"></i>
            <p class="text-xs font-semibold text-gray-700">JWT Token (for testing):</p>
          </div>
          <code id="jwtToken" class="text-xs text-gray-700 break-all block bg-gray-50 p-3 rounded border border-gray-200 font-mono"></code>
        </div>
      </div>
    </div>

    <!-- Events List -->
    <div class="bg-white rounded-lg shadow-md p-6 mt-6">
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-gradient-to-br from-purple-600 to-pink-600 rounded-lg flex items-center justify-center">
            <i data-lucide="list" class="w-5 h-5 text-white"></i>
          </div>
          <h2 class="text-2xl font-bold text-gray-800">Created Events</h2>
        </div>
        <button id="refreshEventsBtn" class="text-sm text-blue-600 hover:text-blue-700 flex items-center gap-1">
          <i data-lucide="refresh-cw" class="w-4 h-4"></i>
          Refresh
        </button>
      </div>
      
      <div id="eventsListContainer">
        <div class="text-gray-500 text-center py-12">
          <i data-lucide="calendar-x" class="w-12 h-12 text-gray-300 mx-auto mb-3"></i>
          <p>No events created yet</p>
          <p class="text-sm mt-1">Create your first event to get started</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- ✅ Load event management script -->
<script>
  import('../scripts/eventManagement.js')
    .then(() => {
      console.log('✅ Event Management script loaded!');
    })
    .catch(err => {
      console.error('❌ Failed to load Event Management script:', err);
    });
</script>

<style>
  .event-management-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  #qrCodeDisplay,
  #eventsListContainer {
    transition: all 0.3s ease-in-out;
  }

  @media print {
    body * {
      visibility: hidden;
    }
    #qrCodeDisplay,
    #qrCodeDisplay * {
      visibility: visible;
    }
    #qrCodeDisplay {
      position: absolute;
      left: 0;
      top: 0;
    }
  }
</style>