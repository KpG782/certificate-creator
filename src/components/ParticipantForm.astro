<form id="participant-form" class="space-y-4">
  <div>
    <label for="participantName" class="block text-sm font-medium text-gray-700 mb-2">
      Full Name *
    </label>
    <input
      type="text"
      id="participantName"
      placeholder="e.g., Juan Dela Cruz"
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      required
    />
  </div>

  <div>
    <label for="participantEmail" class="block text-sm font-medium text-gray-700 mb-2">
      Email Address *
    </label>
    <input
      type="email"
      id="participantEmail"
      placeholder="e.g., jdelacruz.a12345678@umak.edu.ph"
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      required
    />
  </div>

  <div>
    <label for="category" class="block text-sm font-medium text-gray-700 mb-2">
      Category *
    </label>
    <input
      type="text"
      id="category"
      placeholder="e.g., Student, Faculty, Staff"
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      required
    />
  </div>

  <div>
    <label for="seminarTitle" class="block text-sm font-medium text-gray-700 mb-2">
      Seminar Title *
    </label>
    <textarea
      id="seminarTitle"
      rows="2"
      placeholder="e.g., Cybersecurity Fundamentals"
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"
      required
    ></textarea>
  </div>

  <div>
    <label for="eventDate" class="block text-sm font-medium text-gray-700 mb-2">
      Event Date *
    </label>
    <input
      type="text"
      id="eventDate"
      placeholder="e.g., October 18, 2025"
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      required
    />
  </div>

  <div>
    <label for="location" class="block text-sm font-medium text-gray-700 mb-2">
      Location *
    </label>
    <input
      type="text"
      id="location"
      placeholder="e.g., HPSB 1012, University of Makati"
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      required
    />
  </div>

  <div>
    <label for="deanName" class="block text-sm font-medium text-gray-700 mb-2">
      Dean Name *
    </label>
    <input
      type="text"
      id="deanName"
      placeholder="e.g., Prof. Levi B. Mangaba, DT"
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      required
    />
  </div>

  <div>
    <label for="organizerName" class="block text-sm font-medium text-gray-700 mb-2">
      Organizer Name *
    </label>
    <input
      type="text"
      id="organizerName"
      placeholder="e.g., Prof. Cecille E. Tadeo, Ph. D."
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      required
    />
  </div>
</form>