FROM node:18-alpine

WORKDIR /app

# Install deps
COPY package.json package-lock.json* ./
RUN npm ci

# Copy rest of project
COPY . .

# Expose port used for dev server
ENV PORT=3000
EXPOSE 3000

# Start dev server, bind to 0.0.0.0 so container is reachable
CMD ["sh", "-c", "npm run dev -- --host 0.0.0.0 --port 3000"]